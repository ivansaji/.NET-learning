@page
@model RazorPagesTutorial.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>
<h3>@Model.Employees.Count()</h3>
<!--List View-->
<div class="card-deck">
    @foreach(var emoloyee in Model.Employees)
    {
        var photoPath = "~/images/" + (emoloyee.PhotoPath ?? "noimage.png");
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@emoloyee.Name</h3>
            </div>

            <img src="@photoPath" alt="Alternate Text" class="card-img-top imageThumbnail" asp-append-version="true" />

            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>

        </div>
    }
</div>